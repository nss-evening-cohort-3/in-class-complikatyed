
@{
    ViewBag.Title = "Angular";
}

<h2>Angular</h2>
<div ng-controller="FormController">
    @using (Html.BeginForm("Angular", "Basics", FormMethod.Post, new { id = "myform" }))
    {
        @Html.AntiForgeryToken()

            <div id="razorEmail " class="">
                @Html.TextBox("email")
            </div>
            <div id="razorPassword" class="">
                @Html.Password("password")
            </div>
            <div id="razorPasswordConfirmation" class="">
                @Html.Password("PasswordConfirmation")
            </div>
            <div id="razorSubmit" class="">
                <button ng-click=formSubmit($event)>SUBMIT!</button>
            </div>

    }
</div>
 



